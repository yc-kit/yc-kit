{
  "name": "yc-kit",
  "version": "1.0.0",
  "description": "a web toolkit nuxt.js project",
  "author": "yinchen",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "stylelint": "stylelint assets/**/*.{css,scss} {components,layouts,pages}/**/*.vue",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint",
    "*.{css,scss,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ]
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "@u3u/vue-hooks": "^2.0.1",
    "@vue/composition-api": "^0.3.2",
    "nuxt": "^2.9.2",
    "nuxt-webfontloader": "^1.1.0",
    "vue-awesome": "^3.5.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@nuxt/typescript-build": "^0.2.10",
    "@nuxtjs/eslint-config-typescript": "^0.1.3",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@nuxtjs/stylelint-module": "^2.0.0",
    "@nuxtjs/tailwindcss": "^1.0.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "husky": "^3.0.5",
    "jest": "^24.1.0",
    "lint-staged": "^9.2.5",
    "node-sass": "^4.12.0",
    "prettier": "^1.16.4",
    "sass-loader": "^8.0.0",
    "stylelint": "^11.0.0",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^4.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.11.0",
    "typescript": "^3.6.3",
    "vue-jest": "^4.0.0-0"
  }
}
